<div class="container p-4">
    <div class="row gato">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/{{links.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" value="{{links.title}}" name="title" id="" placeholder="titulo" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" value="{{links.url}}" name="url" id="" placeholder="url" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="descrition" value="" rows="2" class="form-control" placeholder="descripcion">{{links.descrition}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>